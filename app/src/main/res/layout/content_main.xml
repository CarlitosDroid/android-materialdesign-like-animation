<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.carlitosdroid.materiallikeanimation.MainActivity"
    tools:showIn="@layout/activity_main">

    <com.carlitosdroid.mdlikeanimation.LikeButtonViewBlue
        android:id="@+id/lbvFavorite"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:unLiked_background_res="@drawable/ic_star_border_blue_500_24dp"
        app:liked_background_res="@drawable/ic_star_blue_500_24dp">

    </com.carlitosdroid.mdlikeanimation.LikeButtonViewBlue>

</LinearLayout>
